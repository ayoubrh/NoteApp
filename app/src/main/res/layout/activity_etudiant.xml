<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.instinctcoder.sqlitedb.StudentDetail$PlaceholderFragment"
    android:background="#FFFFE0"
    android:labelFor="@color/abc_secondary_text_material_dark"
    style="@style/Base.TextAppearance.AppCompat.Caption"
    android:theme="@style/Base.TextAppearance.AppCompat.Body2">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#FFFFE0">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"><![CDATA[


                android:text="R"
                android:id="@+id/btnClose"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_toRightOf="@+id/Prenom"
                android:layout_toEndOf="@+id/Prenom"
                android:layout_gravity="left" />




        ]]></LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="214dp"
            android:layout_height="257dp"
            android:layout_gravity="center_vertical|right">

            <TextView
                android:id="@+id/Email"
                android:layout_alignParentEnd="true"
                android:ems="10"
                android:layout_width="fill_parent"
                android:layout_alignLeft="@+id/editNoteC1"
                android:layout_alignStart="@+id/editNoteC1"
                android:layout_alignParentRight="true"
                android:layout_height="38dp"
                android:layout_below="@+id/btnClose"
                android:textSize="35px"
                android:textStyle="bold|italic" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editNoteC1"
                android:layout_toEndOf="@+id/NoteC1"
                android:layout_alignTop="@+id/NoteC1"
                android:layout_above="@+id/NoteC2"
                android:layout_marginBottom="10px" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editNoteC2"
                android:layout_alignTop="@+id/NoteC2"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_above="@+id/Autre"
                android:layout_marginBottom="10px" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editAutre"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/Autre"
                android:layout_alignBottom="@+id/Autre"
                android:layout_marginBottom="10px" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editNoteEx"
                android:layout_above="@+id/NoteF"
                android:layout_alignLeft="@+id/editNoteF"
                android:layout_alignStart="@+id/editNoteF"
                android:layout_alignTop="@+id/NoteEx"
                android:layout_marginBottom="10px" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editNoteF"
                android:layout_alignBottom="@+id/NoteF"
                android:layout_alignLeft="@+id/editAutre"
                android:layout_alignStart="@+id/editAutre"
                android:layout_alignRight="@+id/editNoteC1"
                android:layout_alignEnd="@+id/editNoteC1"
                android:layout_alignTop="@+id/NoteF"
                android:textSize="35px"
                android:textStyle="bold|italic" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="143dp"
            android:layout_height="257dp"
            android:layout_gravity="left|center_vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Email :"
                android:id="@+id/textView3"
                android:layout_alignBottom="@+id/Email"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/NoteC2"
                android:layout_alignEnd="@+id/NoteC2"
                android:layout_gravity="top"
                android:layout_marginBottom="30px"
                android:textStyle="bold|italic"
                android:textSize="35px" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Note Controle 1 :"
                android:id="@+id/NoteC1"
                android:layout_gravity="center_vertical|left|top"
                android:layout_below="@+id/textView3"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/editNoteC2"
                android:layout_alignRight="@+id/textView3"
                android:layout_alignEnd="@+id/textView3"
                android:layout_marginBottom="30px"
                android:layout_marginTop="10px"
                android:textStyle="bold|italic"
                android:textSize="35px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Note Controle 2 :"
                android:id="@+id/NoteC2"
                android:layout_below="@+id/NoteC1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="left|center_vertical"
                android:layout_marginBottom="30px"
                android:layout_marginTop="10px"
                android:textSize="35px"
                android:textStyle="bold|italic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Autre :"
                android:id="@+id/Autre"
                android:layout_below="@+id/NoteC2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/NoteC2"
                android:layout_alignEnd="@+id/NoteC2"
                android:layout_marginBottom="30px"
                android:layout_marginTop="10px"
                android:textStyle="bold|italic"
                android:textSize="35px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Note Examen :"
                android:id="@+id/NoteEx"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="30px"
                android:layout_marginTop="10px"
                android:textSize="35px"
                android:textStyle="bold|italic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Note Final :"
                android:id="@+id/NoteF"
                android:layout_below="@+id/NoteEx"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/NoteEx"
                android:layout_alignEnd="@+id/NoteEx"
                android:layout_marginBottom="30px"
                android:layout_marginTop="10px"
                android:textStyle="bold|italic"
                android:textSize="35px" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Supprimer"
                android:id="@+id/btnDelete"
                android:layout_below="@+id/NoteF"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="right"
                android:textStyle="bold|italic"
                android:background="#F4A460"
                android:backgroundTint="#F4A460"
                android:backgroundTintMode="screen" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginLeft="10px">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Enregistrer"
                android:id="@+id/btnSave"
                android:layout_alignTop="@+id/btnEmail"
                android:layout_toRightOf="@+id/NoteF"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold|italic"
                android:background="#F4A460"
                android:backgroundTint="#F4A460"
                android:backgroundTintMode="screen" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Envoyer"
                android:id="@+id/btnEmail"
                android:layout_alignTop="@+id/btnDelete"
                android:layout_alignRight="@+id/editNoteF"
                android:layout_alignEnd="@+id/editNoteF"
                android:textStyle="bold|italic"
                android:background="#F4A460"
                android:backgroundTint="#F4A460"
                android:backgroundTintMode="screen" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right|top">

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                android:src="@drawable/Return2"
                android:background="#FFFFE0"
                android:layout_gravity="left|top" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NoteApp"
                android:id="@+id/textView"
                android:textAlignment="center"
                android:textColor="#FF8C00"
                android:textSize="50px"
                android:textStyle="bold|italic"
                android:layout_marginLeft="180px"
                android:layout_marginRight="180px" />

            <ImageView
                android:layout_width="80px"
                android:layout_height="90px"
                android:scaleType="centerCrop"
                android:src="@drawable/Note"
                android:id="@+id/imageView" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="150px">

            <TextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/Nom"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/Email"
                android:layout_toStartOf="@+id/Email"
                android:layout_above="@+id/Email"
                android:layout_alignTop="@+id/Prenom"
                android:textStyle="bold|italic"
                android:textSize="35px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/Prenom"
                android:layout_alignBottom="@+id/btnClose"
                android:layout_toRightOf="@+id/Nom" />
        </LinearLayout>

    </FrameLayout>


</RelativeLayout>