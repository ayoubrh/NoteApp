<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="#FFFFE0">
    <ListView
        android:id="@+id/list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFFE0"
        android:layout_above="@+id/btnEmail"
        android:layout_marginBottom="15px"
        android:theme="@style/Base.TextAppearance.AppCompat.Display2" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Envoyer resultat"
        android:id="@+id/btnEmail"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/list"
        android:layout_alignEnd="@+id/list"
        android:background="#F4A460"
        android:backgroundTint="#F4A460"
        android:backgroundTintMode="screen"
        android:textStyle="bold|italic"
        android:textSize="35px" />

</RelativeLayout>